{
  "manifest_version": 3,
  "name": "NutBot Browser Control",
  "version": "1.0.0",
  "description": "让 NutBot 控制您的浏览器标签页，保留登录状态",
  "permissions": ["debugger", "tabs", "activeTab", "windows"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "点击启用 NutBot 控制",
    "default_icon": {
      "16": "icons/icon-gray-16.png",
      "32": "icons/icon-gray-32.png",
      "48": "icons/icon-gray-48.png",
      "128": "icons/icon-gray-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-gray-16.png",
    "32": "icons/icon-gray-32.png",
    "48": "icons/icon-gray-48.png",
    "128": "icons/icon-gray-128.png"
  }
}
